<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape >
            <solid
                android:color="#FFB6C1" />
            <stroke
                android:width="1dp"
                android:color="#fe0080" />
            <corners
                android:radius="60dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#fb95a4"
                android:endColor="#FFB6C1"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#fe0080" />
            <corners
                android:radius="60dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>